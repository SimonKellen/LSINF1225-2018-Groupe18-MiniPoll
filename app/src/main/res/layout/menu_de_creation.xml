<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="19dp"
        android:gravity="center"
        android:text="Quel type de sondage voulez-vous créer ?"
        android:textColor="@color/black"
        android:textSize="24sp" />


    <Button
        android:id="@+id/menu_de_creation1"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:gravity="center"
        android:text="Trouver un accord entre amis" />

    <Button
        android:id="@+id/menu_de_creation2"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Répondre à un questionnaire" />

    <Button
        android:id="@+id/menu_de_creation3"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:gravity="center"
        android:text="Aider un ami à faire un choix" />

</RelativeLayout>