<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Que voulez-vous faire aujourd'hui ?"
        android:textColor="#112233"
        android:textSize="24sp" />


    <Button
        android:id="@+id/menu_principal1"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:gravity="center"
        android:text="Trouver un accord entre amis" />

    <Button
        android:id="@+id/menu_principal2"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="152dp"
        android:gravity="center"
        android:text="Répondre à un questionnaire" />

    <Button
        android:id="@+id/menu_principal3"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Aider un ami à faire un choix" />


    <Button
        android:id="@+id/menu_principal4"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:gravity="center"
        android:text="Créer un sondage" />


    <Button
        android:id="@+id/menu_principal5"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:gravity="center"
        android:text="Gérer mon profil" />


    <Button
        android:id="@+id/menu_principal6"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Gérer ma liste d'amis" />




</RelativeLayout>